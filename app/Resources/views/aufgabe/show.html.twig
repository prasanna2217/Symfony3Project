{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aufgabe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aufgabe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ aufgabe.name }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{% if aufgabe.releaseDate %}{{ aufgabe.releaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ aufgabe.length }}</td>
            </tr>
            <tr>
                <th>Genres</th>
                <td>{{ aufgabe.genres }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aufgabe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('aufgabe_edit', { 'id': aufgabe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
